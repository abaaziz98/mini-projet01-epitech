
// IMPORT FONT
@import url('https://fonts.googleapis.com/css?family=Raleway|Righteous&display=swap');


#app
    max-width 100vw
    margin 0 0 0 0
    font-family 'Raleway', sans-serif


// NAVBAR
.navbar
    .navbar-brand
        font-family 'Righteous', cursive



// CONTENT
#main-content
    display flex
    flex-direction column

    .content
        width 100vw
        flex 1
        display flex
        justify-content space-between

        .div-content
            padding 40px


// WORKING TIME
#workingtime
    flex-grow 2   



// CHARTS
#charts
    display flex
    flex-direction column

    .chart-group
        width 100vw
        display flex
        justify-content space-evenly
        flex-direction row